<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <LinearLayout
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_marginTop="@dimen/margin_10"
            android:layout_marginBottom="@dimen/margin_20"
            android:text="@string/splash_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="@drawable/divider_line"
            android:layout_width="match_parent"
            android:layout_height="@dimen/splash_line_height_2"/>
    <RadioGroup
        android:gravity="center"
        android:id="@+id/rg_select_version"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_10">

        <RadioButton
            android:layout_margin="@dimen/margin_10"
            android:id="@+id/rb_district_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小区版" />

        <RadioButton
            android:layout_margin="@dimen/margin_10"
            android:id="@+id/rb_municipal_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="市政版" />

        <RadioButton
            android:visibility="gone"
            android:id="@+id/rb_cottage_version"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="别墅版" />
    </RadioGroup>
    
    <Button
        android:textColor="@color/bg_setting"
        android:text="@string/splash_btn_sure"
        android:layout_margin="@dimen/margin_20"
        android:layout_below="@id/rg_select_version"
        android:id="@+id/splash_btn_sure"
        android:background="@drawable/bg_btn_sure_selector"
        android:layout_width="@dimen/splash_btn_width_80"
        android:layout_height="@dimen/splash_btn_height_40" />
    </LinearLayout>
</RelativeLayout>
